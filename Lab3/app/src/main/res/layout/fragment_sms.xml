<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.user.lab3.SmsFragment">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

    <TextView
        android:id="@+id/charLeft"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_above="@+id/messageText"
        android:layout_alignEnd="@+id/messageText"
        android:layout_alignRight="@+id/messageText"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/messageText"
        app:layout_constraintEnd_toEndOf="@+id/messageText" />

    <Button
        android:id="@+id/sentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="828dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/captchaImage" />

    <EditText
        android:id="@+id/fromText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/messageText"
        android:layout_alignStart="@+id/messageText"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5" />

    <EditText
        android:id="@+id/toText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/messageText"
        app:layout_constraintStart_toStartOf="@+id/messageText" />

    <EditText
        android:id="@+id/captchaText"
        android:layout_width="81dp"
        android:layout_height="22dp"
        android:layout_above="@+id/sentBtn"
        android:layout_alignEnd="@+id/messageText"
        android:layout_alignRight="@+id/messageText"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:maxLength="5"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/messageText"
        app:layout_constraintTop_toBottomOf="@+id/messageText" />

    <ImageView
        android:id="@+id/captchaImage"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/captchaText"
        android:layout_alignLeft="@+id/messageText"
        android:layout_alignStart="@+id/messageText"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dialog_close_light"
        app:layout_constraintStart_toStartOf="@+id/messageText"
        app:layout_constraintTop_toBottomOf="@+id/messageText" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toText"
        android:layout_alignLeft="@+id/toText"
        android:layout_alignStart="@+id/toText"
        android:layout_marginBottom="16dp"
        android:text="From:"
        app:layout_constraintBottom_toTopOf="@+id/fromText"
        app:layout_constraintStart_toStartOf="@+id/fromText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fromText"
        android:layout_alignLeft="@+id/fromText"
        android:layout_alignStart="@+id/fromText"
        android:layout_marginBottom="16dp"
        android:text="To:"
        app:layout_constraintBottom_toTopOf="@+id/toText"
        app:layout_constraintStart_toStartOf="@+id/toText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/charLeft"
        android:layout_alignBottom="@+id/charLeft"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/charLeft"
        android:layout_toStartOf="@+id/charLeft"
        android:text="Left:"
        app:layout_constraintBottom_toTopOf="@+id/messageText"
        app:layout_constraintEnd_toStartOf="@+id/charLeft" />

    <ImageView
        android:id="@+id/topImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/webView"
        android:layout_marginBottom="12dp"
        android:background="@android:color/holo_blue_dark"
        android:src="@drawable/edit_text_background"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4" />

    <EditText
        android:id="@+id/messageText"
        android:layout_width="330dp"
        android:layout_height="149dp"
        android:layout_above="@+id/captchaText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textNoSuggestions"
        app:layout_constraintBottom_toTopOf="@+id/sentBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Orange Text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/topImage"
        app:layout_constraintStart_toStartOf="@+id/textView4" />

</android.support.constraint.ConstraintLayout>
</ScrollView>