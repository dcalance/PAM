<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/item1"
        android:bottom="0dp"
        android:left="5dp"
        android:right="5dp"
        android:top="10dp">
        <shape android:shape="oval">
            <size
                android:width="115dp"
                android:height="115dp" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
    <item
        android:id="@+id/item2"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <clip>
            <animation-list>
                <item android:duration="500">
                <shape android:shape="oval">
                    <size
                        android:width="115dp"
                        android:height="115dp" />
                    <solid android:color="@color/colorAccent" />
                </shape>
                </item>
                <item android:duration="500">
                <shape android:shape="oval">
                    <size
                        android:width="115dp"
                        android:height="115dp" />
                    <solid android:color="@color/yellow" />
                </shape>
                </item>
            </animation-list>
        </clip>
    </item>

</layer-list>