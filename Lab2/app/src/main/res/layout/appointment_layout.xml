<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/remainingTimeTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/timeTextView"
        android:layout_toRightOf="@+id/timeTextView"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/remainingTimeTextView"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/timeTextView"
        android:layout_alignLeft="@+id/timeTextView"
        android:layout_alignRight="@+id/timeTextView"
        android:layout_alignStart="@+id/timeTextView"
        android:gravity="center"
        android:layout_below="@+id/timeTextView"
        android:text="TextView"
        android:textSize="10dp"/>


</RelativeLayout>